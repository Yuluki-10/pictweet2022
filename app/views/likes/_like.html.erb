<% if user_signed_in? %>
  <% if current_user.likes.find_by(tweet_id: tweet.id) %>
    <%= link_to "いいね外す ♥", tweet_likes_path(tweet), method: :delete, remote: true %> <%= tweet.likes.count %>
  <% else %>
    <%= link_to "いいねする ♡", tweet_likes_path(tweet), method: :post, remote: true %> <%= tweet.likes.count %>
  <% end %>
<% else %>
  ♥<%= tweet.likes.count %>いいね
<% end %>